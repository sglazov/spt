*
  box-sizing: border-box
  padding: 0
  margin: 0
  text-size-adjust: none

body
  font-family: $GeneralFontFamily
  background: $bodyBackground
  font-size: 15px
  line-height: 1.58
  font-weight: 400

.video-container
  position: relative
  padding-bottom: 56.25%
  padding-top: 30px
  height: 0
  overflow: hidden
  border: 1px solid #ccc
  iframe,
  object,
  embed
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
